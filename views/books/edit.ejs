<%-include('../partials/header')%>
 <div class="container text-center mt-5">
    <h1 class="mb-3">Edit <%=campground.name%></h1>
    <form action="/books/<%=campground._id%>?_method=PUT" method="POST">
        <div style="width:70%; margin: 0 auto">
             <div class="form-group">
                <input  class="form-control" type="text" name="name" id="" value="<%=campground.name%>" placeholder="write name">
             </div>
             <div class="form-group">
                <input  class="form-control" type="number" name="price" id="" value="<%=campground.price%>" placeholder="price in dollars" min="0.01" step="0.01">
             </div>
             <div class="form-group">
                <input  class="form-control" type="number" name="phone" value="<%=campground.phone%>" id="" placeholder="contact number">
             </div>
             <div class="form-group">
                <input type="text"  class="form-control" name="image" value="<%=campground.image%>" placeholder="image url">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="discription" value="<%=campground.discription%>" placeholder="image discription"> 
            </div>
            <div class="form-group" style="width: 30%; margin: 0 auto">
                <input type="submit" class="btn btn-primary btn-large btn-block"> 
            </div>
          
        </div>
    </form>
    <a href="/books">go back</a>
 </div>
<%-include('../partials/footer')%>