    <div class="collapse navbar-collapse justify-content-end " id="navbarSupportedContent">

     
       <ul class="navbar-nav ml-auto ">
<!-- blocks to show login or logout depending on if there is logged or not -->        
<!--- if there is not a session, there is not a currentUser - req.user - show to log in or
      sign up -->

        <% if(!currentUser){   %>
        <li class="nav-item"><a class="nav-link clr font-color-menup" href="/login">Login</a></li>
        <li class="nav-item"><a class="nav-link clr font-color-menup" href="/register">Sign Up</a></li>
       <%  } else {  %>
<!--- if there is  a session, there is a currentUser - req.user - show to log out -->


          <li class="nav-item"><a href="" class="nav-link clr font-color-menup">Logged In As <%= currentUser.username %></a></li>
         <li class="nav-item"><a class="nav-link clr font-color-menup" href="/logout">LogOut</a></li>
        <% } %>
       </ul>
    </div>
  </div>
</nav>

<!----------------- end block main menu -------------->


<br>   
<!----- contenedor to show messages from server ------>
        <div class="container">

  
          <% if(error && error.length>0){ %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong><%= error %></strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% } %>
          <% if(success && success.length>0){ %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong><%= success %></strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <% } %>

        </div>
  
